<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="135dp">
    <ImageView android:id="@+id/avatar" android:layout_width="44dp" android:layout_height="44dp" android:layout_marginTop="20dp" android:layout_alignParentTop="true" android:layout_marginStart="20dp" android:layout_alignParentStart="true"/>
    <LinearLayout android:gravity="left|center_vertical|center_horizontal|center|start" android:orientation="vertical" android:id="@+id/text_wrap" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="0dp" android:layout_marginBottom="0dp" android:layout_alignTop="@+id/avatar" android:layout_marginStart="10dp" android:layout_marginEnd="20dp" android:layout_toEndOf="@+id/avatar" android:layout_alignParentEnd="true">
        <TextView android:textSize="16sp" android:textColor="@color/toolbarColor" android:ellipsize="end" android:gravity="start" android:id="@+id/name" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:fontFamily="sans-serif-medium" android:paddingStart="3dp"/>
        <TextView android:textSize="16sp" android:textColor="@color/notificationDarkGreen" android:ellipsize="end" android:gravity="start" android:layout_gravity="center_vertical" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/title_incoming_video_call" android:singleLine="true" android:drawablePadding="8dp" android:drawableStart="@drawable/ic_videocam_dark_green"/>
        <TextView android:textSize="14sp" android:textColor="@color/textGray" android:ellipsize="end" android:gravity="start" android:id="@+id/subtitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:paddingStart="3dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/buttons" android:paddingTop="0.3dp" android:layout_width="match_parent" android:layout_height="48dp" android:layout_alignParentBottom="true">
        <FrameLayout android:id="@+id/btn_decline" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="2dp" android:layout_weight="1">
            <TextView android:textSize="14sp" android:textColor="@color/errorRed" android:gravity="center" android:layout_gravity="center" android:id="@+id/tv_decline" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/call_decline" android:drawablePadding="12dp" android:textAllCaps="true" android:drawableStart="@drawable/ic_decline" android:fontFamily="sans-serif-medium"/>
        </FrameLayout>
        <FrameLayout android:id="@+id/btn_answer" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="2dp" android:layout_weight="1">
            <TextView android:textSize="14sp" android:textColor="@color/notificationDarkGreen" android:gravity="center" android:layout_gravity="center" android:id="@+id/tv_answer" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/call_answer" android:drawablePadding="12dp" android:textAllCaps="true" android:drawableStart="@drawable/ic_call_dark_green" android:fontFamily="sans-serif-medium"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
